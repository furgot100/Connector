<html>
    <head>
        <meta charset="utf-8">
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="css/style.css">
    </head>
    <body>
        <div class="row mt-4">
            <div class="col-md-6 offset-lg-3">
                <div class="card">
                    <div class="card-header">
                        {{lobby.title}}
                    </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                        <p>{{lobby.desc}}</p>
                        <p>{{lobby.link}}</p>
                        <footer>
                            <a href="/lobby/{{lobby.id}}/edit">Edit</a>
                        </footer>
                        </blockquote>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 offset-lg-1">
                <div class="d-flex justify-content-between">
                    <b>Comments ({{lobby.Comments.length}})</b>
                </div>

                <div class="list-group mt-4">
                    {{#each lobby.Comments}}
                    <div class="list-group-item clearfix">
                        <div class="float-left">
                            <h5>{{this.name}}</h5><br>
                            {{this.desc}}
                        </div>
                        <div class="float-right">
                            <form class="form-inline" action="/lobby/{{../lobby.id}}/comment/{{this.id}}?_method=DELETE" method="post">
                            <button type="submit" class="btn btn-link btn-sm">Remove</button>
                            </form>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-lg-6 offset-lg-3">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                            <h3>New comment</h3>
                            <div class="lead">
                                Lobby: {{lobby.title}}
                            </div>
                        </div>
                        <div class="card-text">
                            <form action="/lobby/{{lobby.id}}/comment" method="post">
                                <div class="form-group">
                                    <label for="title">Name</label>
                                    <input name="name" class="form-control" placeholder="Jane Doe" />
                                </div>
                                <div class="form-group">
                                    <label for="desc">Comment</label>
                                    <input name="desc" class="form-control" placeholder="Comment" />
                                </div>
                                <div class="text-right">
                                    <a href="/" class='text-muted mr-2'>Cancel</a>
                                    <button type="submit" class="btn btn-primary" name="button">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    </body>
</html>